/**
 * Funcion para calcular la proyeccion de insumos para el POA a editar
 */
 function calcularProyeccionEditar() {

    var subreceptor = document.getElementById('esubreceptor').value;
    var total = parseFloat(document.getElementById('etotal').value);

    var accion = "calcularProyeccionPOA";

    $.ajax({
        type: "POST",
        url: "../servicio/poa.php",
        data: {
            accion: accion,
            subreceptor: subreceptor,
            total: total
        },
        success: function (datos) {
            var resultado   = datos.split(',');
            var cnatural    = parseFloat(resultado[0]);
            var csabor      = parseFloat(resultado[1]);
            var cfemenino   = parseFloat(resultado[2]);
            var lubricante  = parseFloat(resultado[3]);
            var pruebaVIH   = parseFloat(resultado[4]);
            var autoPrueba  = parseFloat(resultado[5]);
            document.getElementById('ecnatural').value   = cnatural.toFixed(4);
            document.getElementById('ecsabor').value     = csabor.toFixed(4);
            document.getElementById('ecfemenino').value  = cfemenino.toFixed(4);
            document.getElementById('elubricante').value = lubricante.toFixed(4);
            document.getElementById('epruebaVIH').value  = pruebaVIH.toFixed(4);
            document.getElementById('eautoPrueba').value = autoPrueba.toFixed(4);
            document.getElementById('esifilis').value    = total.toFixed(4);
        }
    });
}

/**
 * Funcion para llenar municipio a editar
 */
 function llenarMunicipioEditar() {

    var departamento = document.getElementById('edepartamento').value;

    var accion = "llenarMunicipio";

    $.ajax({
        type: "POST",
        url: "../servicio/utilidad.php",
        data: {
            accion: accion,
            departamento: departamento
        },
        success: function (datos) {
            $("#emunicipio").html(datos);

        }
    });
}

/**
 * Funcion que permite sumar los datos deL POA a editar
 */
 function sumaPoaEditar() {
    var suma =0.0;
    var nuevo = parseFloat(document.getElementById('enuevo').value);
    var recurrente = parseFloat(document.getElementById('erecurrente').value);
    suma = nuevo + recurrente;
    document.getElementById('etotal').value = suma.toFixed(4);

}